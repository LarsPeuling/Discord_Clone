<Page x:Class="Discord_Clone.Forms.CreateServer.CreateServerName"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Discord_Clone.Forms.CreateServer"
      mc:Ignorable="d" 
      d:DesignHeight="404" d:DesignWidth="440"
      Title="CreateServerName">

    <Grid>

        <Rectangle HorizontalAlignment="Center" Height="70" Margin="0,145,0,0" Fill="#FF2B2D31" VerticalAlignment="Top" Width="439" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>

                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button x:Name="btnCreateServer" Content="Create" HorizontalAlignment="Left" Margin="289,164,0,0" VerticalAlignment="Top" Background="#FF5865F2" Width="106" Height="29" FontFamily="Uni Sans CAPS" FontWeight="Bold" Foreground="White" BorderThickness="0" BorderBrush="#00707070" Click="btnCreateServer_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="15,171,0,0" VerticalAlignment="Top" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070" Width="37" Height="14" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" FontFamily="Uni Sans CAPS" FontSize="9" FontWeight="Bold"/>
        <TextBox x:Name="tbServerName" HorizontalAlignment="Center" Height="40" Margin="0,34,0,0" TextWrapping="Wrap" Text="Server" VerticalAlignment="Top" Width="408" BorderBrush="#00ABADB3" Foreground="White" SelectionTextBrush="#FF1E1F22" Background="#FF1E1F22" FontFamily="Uni Sans CAPS" FontWeight="Bold" VerticalContentAlignment="Center"/>
    </Grid>
</Page>
