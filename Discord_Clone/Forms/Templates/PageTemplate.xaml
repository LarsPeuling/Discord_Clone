<UserControl x:Class="Discord_Clone.Forms.Templates.PageTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Discord_Clone.Forms.Templates"
             mc:Ignorable="d" Height="1023" Width="1848">
    <Grid Width="1848" Height="1026" Background="#2B2D31">
        <ComboBox x:Name="cbChannelList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Background="#FF2B2D31" BorderBrush="#FF2B2D31" OpacityMask="#2B2D31" Foreground="Black" FontFamily="gg sans mono" Margin="0,81,0,0" SelectionChanged="cbChannelList_SelectionChanged"/>
        <Frame x:Name="ChatContent" 
                Visibility="Visible" 
               Margin="240,47,240,0"
                Background="#313338"/>
        <TextBox x:Name="tbChatBox" HorizontalAlignment="Center" Margin="0,950,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Width="1336" Height="44" Background="#FF383A40" Foreground="White" FontFamily="gg sans mono" VerticalContentAlignment="Center" FontSize="22"/>
        <TextBox x:Name="tbServerName" HorizontalAlignment="Left" Margin="10,10,0,0" FontFamily="gg sans mono Bold" TextWrapping="Wrap" Text="Server Name" VerticalAlignment="Top" Width="230" Background="Transparent" Foreground="White" Height="37" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" BorderBrush="#00ABADB3" FontSize="24" />
        <ListBox x:Name="lbParticipants" d:ItemsSource="{d:Binding participantList}" Margin="1613,47,0,0" Background="#FF2B2D31" Foreground="White" BorderBrush="#00ABADB3" HorizontalContentAlignment="Center" FontFamily="gg sans mono" FontSize="14" RenderTransformOrigin="0.5,0.5">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>

    </Grid>
</UserControl>
