<Page x:Name="CreateServerPage1" x:Class="Discord_Clone.Forms.CreateServerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Discord_Clone.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="404" d:DesignWidth="440"
      Title="CreateServerPage">

    <Grid >
        <Border BorderBrush="Black" BorderThickness="3" CornerRadius="5">
            <Grid>
                <Button x:Name="btnCreateServer" Content="Create My Own" HorizontalAlignment="Center"  VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="408" Height="66" BorderBrush="#FF42454C" Background="#FF313338" Foreground="White" FontFamily="gg sans mono Bold" FontSize="20" HorizontalContentAlignment="Left" OpacityMask="Black" Click="btnCreateServer_Click">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="0"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <TextBlock x:Name="tbCreateYourServer" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" Text="Create Your Server" VerticalAlignment="Top" Height="24" Width="238" FontFamily="gg sans mono Bold" Foreground="White"  FontSize="22"/>
                <TextBlock x:Name="tbDescription" HorizontalAlignment="Center" Margin="0,61,0,0" TextWrapping="Wrap" Text="Your server is where you and your friends hang out. Make yours and start talking." VerticalAlignment="Top" TextAlignment="Center" Foreground="White" Width="414" Height="42" FontSize="16" FontFamily="gg sans mono Normal"/>

            </Grid>
        </Border>
    </Grid>
</Page>
