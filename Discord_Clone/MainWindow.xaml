<Window x:Class="Discord_Clone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discord_Clone" 
        xmlns:viewmodel="clr-namespace:Discord_Clone.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="650" Width="1200" 
        Background="#1E1F22"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
        
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="#252525"
                MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label Content="Discord Clone"
                       Foreground="Gray"
                       FontFamily="gg sans mono"
                       FontWeight="Bold"/>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Width="20" Height="20"
                            Content="🗕"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Margin="0,0,0,1"
                            Click="btnMinimize_Click"/>
                    <Button Width="20" Height="20"
                            Content="🗖"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Click="btnMaximize_Click"/>
                    <Button Width="20" Height="20"
                            Content="🗙"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Background="#2F3136"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Servers"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   FontFamily="gg sans mono"
                   Foreground="Gray"
                   Margin="8,0,0,0"/>

            <ListView ItemsSource="{Binding Servers}"
                      SelectedItem="{Binding SelectedServer}"
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="1"
                      ItemContainerStyle="{StaticResource ServerCard}"
                      />


            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Background="#292b2f">
                <Border CornerRadius="25"
                        Width="30" Height="30"
                        Background="#3bff6f"
                        Margin="18,0,0,0"/>
                <StackPanel VerticalAlignment="Center">
                    <Label Content="Username"
                           Margin="0,-5,0,-5"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontFamily="gg sans mono"/>
                    <Label Content="Status"
                           Margin="0,-8,0,-5"
                           Foreground="Gray"
                           FontWeight="Medium"
                           FontFamily="gg sans mono"
                           FontSize="10"/>
                </StackPanel>
            </StackPanel>
            
            
        </Grid>

        <Grid Grid.Column="1" 
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="39"/>
                <RowDefinition />
                
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderBrush="Gray"
                    BorderThickness="2">
                <Label Content="{Binding SelectedServer.Name}"
                       Foreground="White"
                       FontFamily="gg sans mono"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Row="1"
                    BorderBrush="Gray"
                    BorderThickness="2"
                    Margin="0,-2,0,-2">
                <ListView ItemsSource="{Binding Channels}"  
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="White"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding SelectedChannel}"/>
                          

            </Border>

            <Border Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1">
                <Label Grid.Column="2"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="30,0,10,0"
                       Content="{Binding SelectedChannel.Name}"
                       Foreground="White"
                       FontFamily="gg sans mono"
                       FontWeight="Medium"/>
            </Border>

            

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>

                <ListView Background="Transparent"
                          BorderThickness="0"
                          ItemsSource="{Binding Messages}"
                          ItemContainerStyle="{StaticResource ChatItem }"/>

                <ListView Grid.Column="1" Grid.RowSpan="2"
                          Background="Transparent"
                          BorderThickness="1"
                          BorderBrush="Gray"
                          ItemsSource="{Binding SelectedChannel.Participants}"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="8"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Grid.ColumnSpan="2">
                        <TextBox Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Text="Message @Channelname"
                                 Style="{StaticResource MessageBox}"
                                 Height="42"
                                 VerticalAlignment="Center"
                                 Margin="0"/>
                        

                    </Border>
                    <Button Grid.Column="1"
                            BorderThickness="0"
                            Margin="2"
                            Command="{Binding SendCommand}">
                        <Image Source="{StaticResource SendIcon}" 
                               Height="20" Width="20"
                               RenderOptions.BitmapScalingMode="Fant"/>
                    </Button>
                            
                </Grid>

            </Grid>

        </Grid>
        

    </Grid>
</Window>
